<h1>Dashboard</h1>

<ul class="sleeps-char" data-wake-up-hour=<%= current_user.baby.night_sleep_finish %>>
  <% days = 6 %>
  <% 7.times do |i| %>
    <% day = (Date.today - (days - i).days).to_s %>
    <li class="sleeps-char-item" data-day=<%= day %>>
      <% @sleeps[day].each do |sleep| %>
        <span data-sleep-start="<%= sleep.started_at.strftime('%H:%m') %>" data-sleep-finish="<%= sleep.finished_at.strftime('%H:%m') %>"></span>
      <% end %>
    </li>
  <% end %>
</ul>

<% if current_user.baby.present? %>
  <a href="/sleeps/new">Srart sleep</a>
<% else%>
  <a href="/babies/new">Add baby</a>
<% end %>
