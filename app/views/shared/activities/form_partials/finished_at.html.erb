<% current_time = Time.new.in_time_zone(current_user.time_zone) %>

<h3>Finished at:</h3>
<div class="form-group d-flex event-timestamps-form">
  <label>Year: <br>
    <input class="form-control" type="number" name="activity_finished_at[year]" value="<%= current_time.year if locals[:with_value] %>">
  </label>
  <label>Month: <br>
    <input class="form-control" type="number" name="activity_finished_at[month]" value="<%= current_time.month if locals[:with_value] %>">
  </label>
  <label>Day: <br>
    <input class="form-control" type="number" name="activity_finished_at[day]" value="<%= current_time.day if locals[:with_value] %>">
  </label>
  <label>Hour: <br>
    <input class="form-control" type="number" name="activity_finished_at[hour]" value="<%= current_time.hour if locals[:with_value] %>">
  </label>
  <label>Min: <br>
    <input class="form-control" type="number" name="activity_finished_at[minute]" value="<%= current_time.min if locals[:with_value] %>">
  </label>
</div>
