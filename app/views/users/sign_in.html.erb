<div class="vertically-centered-block">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-4">
        <form action="/users/sign_in" method="post">
          <% if locals[:alert].present? %>
            <div class="alert alert-danger" role="alert">
              <%= locals[:alert] %>
            </div>
          <% end %>
          <div class="form-group">
            <label for="user-sign-in-email" class="form-label">Email address</label>
            <input type="email" name="email" class="form-control" id="user-sign-in-email">
          </div>
          <div class="form-group">
            <label for="user-sign-in-password" class="form-label">Password</label>
            <input type="password" name="password" class="form-control" id="user-sign-in-password">
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-primary">Sign in</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
